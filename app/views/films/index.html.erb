<div class='container'>
    <div class='row justify-content-center'>
        <div class='col-3'>
            <div class="accordion my-accordion" id="accordionPanelsStayOpenExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" 
                        data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                            Жанры
                        </button>
                    </h2>
                    <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                        <div class="accordion-body my-accordion-body">
                            <% @genres_list.each do | film | %>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        <%=  ActiveSupport::JSON.decode(film.genres)['name_ru'] %>
                                    </label>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                        data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                            Год выпуска
                        </button>
                    </h2>
                    <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo">
                        <div class="accordion-body my-accordion-body">
                            <% @year_list.each do | film | %>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        <%= film.year %>
                                    </label>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                        <button class="accordion-button collapsed" type="button" 
                        data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" 
                        aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                            Страна
                        </button>
                    </h2>
                    <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingThree">
                        <div class="accordion-body">
                            <% @country_list.each do |film|%>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    <%= film.country %>
                                </label>
                            </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Список фильмов -->
        <div class='col-9'>
            <div class='row justify-content-center'>
                <% @films.each do | film | %>
                    <div class="card my-card" style="width: 18rem;">
                         <img src=<%= film.small_poster %> class="card-img-top my-card-img" alt="..."> 
                        <div class="card-body">
                            <h5 class="card-title"> <%= film.name %></h5>
                            <p class="card-text">Страна: <%= film.country %></p>
                            <p class="card-text">Бюджет: <%= film.budget %> </p>
                            <p class="card-text">жанр: <%= ActiveSupport::JSON.decode(film.genres)['name_ru'] %></p> 
                            <a href="#" class="btn btn-primary">Go somewhere</a>  
                        </div>
                    </div>
                <% end %>
            </div>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>